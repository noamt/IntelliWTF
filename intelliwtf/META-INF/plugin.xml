<idea-plugin version="2">
    <name>IntelliWTF</name>
    <description>Submit code snippets to The Daily WTF directly from Intellij IDEA</description>
    <version>0.1</version>
    <vendor>Noam Y. Tenne</vendor>

    <idea-version since-build="8000"/>

    <actions>
        <action id="SubmitWTFAction" class="org.noam.intelliwtf.actions.SubmitWtfAction" text="Submit to TDWTF"
                description="Submit the selected code snippet to TDWTF" icon="icons/intelliwtf.ico">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorToggleColumnMode"/>
        </action>
    </actions>
</idea-plugin>